{
	"id": "nl.nielsdeklerk.neeo",
	"version": "0.49.1",
	"compatibility": "1.x >=1.5.0",
	"sdk": 2,
	"name": {
		"en": "NEEO",
		"nl": "NEEO"
	},
	"description": {
		"en": "This app brings the best of NEEO and Homey together.",
		"nl": "Deze App brengt het beste van NEEO en Homey samen."
	},
	"category": [
		"appliances",
		"video",
		"music",
		"lights"
	],
	"tags": {
		"en": [
			"NEEO",
			"NEEO Brain",
			"NEEO Remote",
			"NEEO App",
			"Remote",
			"6336"
		],
		"nl": [
			"NEEO",
			"NEEO Brain",
			"NEEO Remote",
			"NEEO App",
			"Afstandsbediening",
			"6336"
		]
	},
	"images": {
		"large": "assets/images/large.png",
		"small": "assets/images/small.png"
	},
	"author": {
		"name": "Niels de Klerk",
		"email": "mail@nielsdeklerk.nl"
	},
	"contributors": {
        "developers": [
            {
                "name": "Niels de Klerk",
				"email": "mail@nielsdeklerk.nl"
            }
        ]
    },
	"contributing": {
        "donate": {
            "paypal": {
                "username": "NielsdeKlerk"
            }
        }
    },
	"bugs": {
        "url": "https://github.com/nklerk/nl.nielsdeklerk.neeo/issues"
    },
	"flow": {
		"triggers": [
			{
				"id": "button_pressed",
				"title": {
					"en": "A button is pressed."
				},
				"hint": {
					"en": "This card is triggered when a button is pressed."
				},
				"args": [{
					"name": "device",
					"type": "autocomplete",
					"placeholder": {
						"en": "Device"
					}
				},
				{
					"name": "capabilitie",
					"type": "autocomplete",
					"placeholder": {
						"en": "Button"
					}
				}]
			},
			{
				"id": "switch_changed",
				"title": {
					"en": "A switch changed state."
				},
				"hint": {
					"en": "This card is triggered when a switch changed state."
				},
				"tokens": [{
					"name": "value",
					"title": {
						"en": "Value"
					},
					"type": "boolean"
				}],
				"args": [{
					"name": "device",
					"type": "autocomplete",
					"placeholder": {
						"en": "Device"
					}
				},
				{
					"name": "capabilitie",
					"type": "autocomplete",
					"placeholder": {
						"en": "Switch"
					}
				}]
			},
			{
				"id": "slider_changed",
				"title": {
					"en": "A slider is changed."
				},
				"hint": {
					"en": "This card is triggered when a slider of a virtual device is changed."
				},
				"tokens": [{
					"name": "value",
					"type": "number",
					"title": {
						"en": "Value"
					},
					"example": 45
				},
				{
					"name": "decimalvalue",
					"type": "number",
					"title": {
						"en": "Decimal Value"
					},
					"example": 0.45
				}],
				"args": [{
					"name": "device",
					"type": "autocomplete",
					"placeholder": {
						"en": "Device"
					}
				},
				{
					"name": "capabilitie",
					"type": "autocomplete",
					"placeholder": {
						"en": "Slider"
					}
				}]
			},
			{
				"id": "received_event",
				"title": {
					"en": "Event triggered"
				},
				"hint": {
					"en": "This card is triggered when a NEEO event is triggered. (recipe activated, button pressed, slider changed, etc...)"
				},
				"tokens": [{
					"name": "Action",
					"type": "string",
					"title": {
						"en": "Action"
					},
					"example": {
						"en": "VOLUME UP"
					}
				},
				{
					"name": "Device",
					"type": "string",
					"title": {
						"en": "Device"
					},
					"example": {
						"en": "Receiver"
					}
				},
				{
					"name": "Room",
					"type": "string",
					"title": {
						"en": "Room"
					},
					"example": {
						"en": "Living room"
					}
				},
				{
					"name": "Parameter",
					"type": "string",
					"title": {
						"en": "Parameter"
					},
					"example": {
						"en": "Parameter"
					}
				},
				{
					"name": "Json",
					"type": "string",
					"title": {
						"en": "JSON"
					},
					"example": {
						"en": "{\"action\":\"brightness\",\"device\":\"Badkamer\",\"room\":\"Verlichting\",\"actionparameter\":48}"
					}
				}]
			}
		],
		"conditions": [
			{
				"id": "recipe_active",
				"title": {
					"en": "Recipe !{{is|isn't}} active",
					"nl": "Recept is !{{|niet}} actief"
				},
				"args": [{
					"name": "room",
					"type": "autocomplete",
					"placeholder": {
						"en": "Room"
					}
				},
				{
					"name": "recipe",
					"type": "autocomplete",
					"placeholder": {
						"en": "Recipe"
					}
				}]
			},
			{
				"id": "UpdateAvailable",
				"title": {
					"en": "Firmware update !{{is|isn't}} availeble",
					"nl": "Nieuwe software is !{{|niet}} beschikbaar"
				},
				"hint": {
					"en": "This card will check if a new update is availeble for the selected NEEO Brain.",
					"nl": "Deze kaart controleert of er nieuwe software beschikbaar is voor de geselecteede NEEO brain."
				},
				"args": [{
					"name": "brain",
					"type": "autocomplete",
					"placeholder": {
						"en": "Brain"
					}
				}]
			}
		],
		"actions": [
			{
				"id": "activate_recipe",
				"title": {
					"en": "Start a recipe",
					"nl": "start een recipe"
				},
				"hint": {
					"en": "This card will start (Activate) the selected recipe",
					"nl": "Deze kaart start de geselecteerde recipe"
				},
				"args": [{
					"name": "room",
					"type": "autocomplete",
					"placeholder": {
						"en": "Room"
					}
				},
				{
					"name": "recipe",
					"type": "autocomplete",
					"placeholder": {
						"en": "Recipe"
					}
				}]
			},
			{
				"id": "poweroff_recipe",
				"title": {
					"en": "Stop a recipe",
					"nl": "Recipe stoppen"
				},
				"hint": {
					"en": "This card will stop (shutdown) the selected recipe.",
					"nl": "Deze kaart stopt de geselecteerde recipe."
				},
				"args": [{
					"name": "room",
					"type": "autocomplete",
					"placeholder": {
						"en": "Room"
					}
				},
				{
					"name": "recipe",
					"type": "autocomplete",
					"placeholder": {
						"en": "Recipe"
					}
				}]
			},
			{
				"id": "poweroff_all_recipes",
				"title": {
					"en": "Shutdown all recipes",
					"nl": "alle recipes stoppen"
				},
				"hint": {
					"en": "This card will shutdown all recipes.",
					"nl": "Deze kaart stopt alle recipes."
				}
			},
			{
				"id": "command_button",
				"title": {
					"en": "Press a button",
					"nl": "Druk op een knop"
				},
				"hint": {
					"en": "This card will press the selected button on the NEEO remote.",
					"nl": "Deze kaart drukt op de geselecteerde knop op de NEEO remote."
				},
				"args": [{
					"name": "room",
					"type": "autocomplete",
					"placeholder": {
						"en": "Room"
					}
				},
				{
					"name": "device",
					"type": "autocomplete",
					"placeholder": {
						"en": "Device"
					}
				},
				{
					"name": "capabilitie",
					"type": "autocomplete",
					"placeholder": {
						"en": "Button"
					}
				}]
			},
			{
				"id": "command_switch",
				"title": {
					"en": "Change a Switch to On/Off",
					"nl": "Zet schakelaar Aan/Uit"
				},
				"hint": {
					"en": "This card will set the selected switch on the NEEO remote to On/Off.",
					"nl": "Deze kaart schakelt de geselecteerde schakelaar op de NEEO remote aan/uit."
				},
				"args": [{
					"name": "room",
					"type": "autocomplete",
					"placeholder": {
						"en": "Room"
					}
				},
				{
					"name": "device",
					"type": "autocomplete",
					"placeholder": {
						"en": "Device"
					}
				},
				{
					"name": "capabilitie",
					"type": "autocomplete",
					"placeholder": {
						"en": "Switch"
					}
				},
				{
					"name": "value",
					"type": "dropdown",
					"values": [{
						"id": "off",
						"label": {
							"en": "Off",
							"nl": "Uit"
						}
					},
					{
						"id": "on",
						"label": {
							"en": "On",
							"nl": "Aan"
						}
					}]
				}]
			},
			{
				"id": "command_slider",
				"title": {
					"en": "Change a Slider."
				},
				"hint": {
					"en": "This card will set the selected slider on the NEEO remote to a specific value."
				},
				"args": [{
					"name": "room",
					"type": "autocomplete",
					"placeholder": {
						"en": "Room"
					}
				},
				{
					"name": "device",
					"type": "autocomplete",
					"placeholder": {
						"en": "Device"
					}
				},
				{
					"name": "capabilitie",
					"type": "autocomplete",
					"placeholder": {
						"en": "Slider"
					}
				},
				{
					"name": "value",
					"type": "range",
					"min": 0,
					"max": 100
				}]
			},
			{
				"id": "inform_slider",
				"title": {
					"en": "Inform slider state. (Percentage)"
				},
				"hint": {
					"en": "This card will inform the NEEO remote user interface of the given value in percentage for the selected slider."
				},
				"args": [{
					"name": "device",
					"type": "autocomplete",
					"placeholder": {
						"en": "Device"
					}
				},
				{
					"name": "capabilitie",
					"type": "autocomplete",
					"placeholder": {
						"en": "Slider"
					}
				},
				{
					"name": "value",
					"type": "range",
					"min": 0,
					"max": 1,
					"step": 0.01,
					"label": "%",
					"labelMultiplier": 100,
					"labelDecimals": 0
				}]
			},
			{
				"id": "inform_slider_value",
				"title": {
					"en": "Inform slider state. (Value)"
				},
				"hint": {
					"en": "This card will inform the NEEO remote user interface of the new value for the selected slider"
				},
				"args": [{
					"name": "device",
					"type": "autocomplete",
					"placeholder": {
						"en": "Device"
					}
				},
				{
					"name": "capabilitie",
					"type": "autocomplete",
					"placeholder": {
						"en": "Slider"
					}
				},
				{
					"name": "value",
					"type": "number"
				}]
			},
			{
				"id": "inform_switch",
				"title": {
					"en": "Update switch state."
				},
				"hint": {
					"en": "This card will inform the NEEO remote user interface of the new value for the selected switch."
				},
				"args": [{
					"name": "device",
					"type": "autocomplete",
					"placeholder": {
						"en": "Device"
					}
				},
				{
					"name": "capabilitie",
					"type": "autocomplete",
					"placeholder": {
						"en": "Switch"
					}
				},
				{
					"name": "value",
					"type": "dropdown",
					"values": [{
						"id": false,
						"label": {
							"en": "False"
						}
					},
					{
						"id": true,
						"label": {
							"en": "True"
						}
					}]
				}]
			},
			{
				"id": "inform_textlabel",
				"title": {
					"en": "Update textlabel or image state."
				},
				"hint": {
					"en": "This card will inform the NEEO brain that the selected textlabel or image has a new value. For images use either a image URL or a image tag."
				},
				"args": [{
					"name": "device",
					"type": "autocomplete",
					"placeholder": {
						"en": "Device"
					}
				},
				{
					"name": "capabilitie",
					"type": "autocomplete",
					"placeholder": {
						"en": "textlabel"
					}
				},
				{
					"name": "value",
					"type": "text"
				}]
			},
			{
				"id": "neeobrain_blinkLED",
				"title": {
					"en": "Blink the brain LED."
				},
				"hint": {
					"en": "This card will blink the LED of the selected NEEO brain (every x time blinks for 2 seconds.)"
				},
				"args": [{
					"name": "brain",
					"type": "autocomplete",
					"placeholder": {
						"en": "Brain"
					}
				},
				{
					"name": "times",
					"type": "number",
					"placeholder": {
						"en": "x time(s)."
					}
				}
			]
		},{
			"id": "neeoBrainUpdateFirmware",
			"title": {
				"en": "Update Firmware of Brain."
			},
			"hint": {
				"en": "This card will upgrade the brain when a update is available"
			},
			"args": [{
				"name": "brain",
				"type": "autocomplete",
				"placeholder": {
					"en": "Brain"
				}
			}]
		}]
	}
}